{
  "name": "@halo-dev/richtext-editor-monorepo",
  "version": "0.0.0",
  "private": "true",
  "scripts": {
    "packages:dev": "pnpm --filter './packages/**' dev",
    "packages:build": "pnpm --filter './packages/**' build",
    "packages:release": "pnpm --filter './packages/**' release",
    "example:dev": "pnpm --filter './example/' run dev",
    "example:build": "pnpm --filter './example/' run build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@vueuse/core": "^10.2.1",
    "pinia": "^2.1.4",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/jsdom": "^16.2.15",
    "@types/node": "^18.17.0",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.45.0",
    "eslint-plugin-vue": "^9.15.1",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "typescript": "~4.7.4",
    "vite": "^4.4.6",
    "vitest": "^0.18.1",
    "vue-tsc": "^0.40.13"
  }
}
