{
  "name": "@halo-dev/richtext-editor-monorepo",
  "version": "0.0.0",
  "private": "true",
  "scripts": {
    "packages:dev": "pnpm --filter './packages/**' dev",
    "packages:build": "pnpm --filter './packages/**' build",
    "packages:release": "pnpm --filter './packages/**' release",
    "example:dev": "pnpm --filter './example/' run dev",
    "example:build": "pnpm --filter './example/' run build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "pinia": "^2.0.26",
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@tailwindcss/typography": "^0.5.8",
    "@types/jsdom": "^16.2.15",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitejs/plugin-vue-jsx": "^2.1.1",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/test-utils": "^2.2.4",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.28.0",
    "eslint-plugin-vue": "^9.8.0",
    "jsdom": "^20.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "typescript": "~4.7.4",
    "vite": "^3.2.4",
    "vitest": "^0.18.1",
    "vue-tsc": "^0.40.13"
  }
}
